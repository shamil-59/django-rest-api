from psycopg2 import OperationalError as PsycOpError
from django.db.utils import OperationalError
from django.core.management import call_command
from unittest.mock import patch
from django.test import SimpleTestCase


@patch('core.management.commands.wait_for_db_v.Command.check')
class CommandTests(SimpleTestCase):
    """Test djago commands."""

    def test_wait_for_db_v_ready(self, patched_check):
        """Test waiting for db if db is ready. """
        patched_check.return_value = True

        call_command('wait_for_db_v')

        patched_check.assert_called_once_with(databases=['default'])

    @patch('time.sleep')
    def test_wait_for_db_v_delay(self, patched_sleep, patched_check):
        """Test waiting for db, when getting OperationalError."""

        patched_check.side_effect = [PsycOpError] * 2 + \
            [OperationalError] * 3 + [True]

        call_command('wait_for_db_v')

        self.assertEqual(patched_check.call_count, 6)
        patched_check.assert_called_with(databases=['default'])
